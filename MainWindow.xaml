<Window x:Class="StripeCloud.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:StripeCloud.ViewModels"
        mc:Ignorable="d"
        Title="StripeCloud - Transaktionsvergleich" 
        Height="800" Width="1400" 
        MinHeight="600" MinWidth="1000"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <viewmodels:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <!-- Styles -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1565C0"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#757575"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#616161"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#424242"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Edit Mode Button Style -->
        <Style x:Key="EditModeButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#FF9800"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F57C00"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#EF6C00"/>
                </Trigger>
                <DataTrigger Binding="{Binding IsEditMode}" Value="True">
                    <Setter Property="Background" Value="#4CAF50"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#4CAF50"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#45a049"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="WarningButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#FF9800"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F57C00"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#F44336"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D32F2F"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid Styles -->
        <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AlternatingRowBackground" Value="#F8F9FA"/>
            <Setter Property="RowHeight" Value="35"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="CanUserSortColumns" Value="True"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- Edit Mode Panel -->
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header/Toolbar -->
        <Border Grid.Row="0" Background="#FAFAFA" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="10">
            <StackPanel>
                <!-- Status Cards -->
                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Stripe Status Card -->
                    <Border Grid.Column="0" BorderBrush="#E3F2FD" BorderThickness="2" CornerRadius="8" Margin="5" Padding="15">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="White"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasStripeData}" Value="True">
                                        <Setter Property="Background" Value="#E8F5E8"/>
                                        <Setter Property="BorderBrush" Value="#4CAF50"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding HasStripeData}" Value="False">
                                        <Setter Property="Background" Value="#F8F9FA"/>
                                        <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="💳" FontSize="20" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="Stripe-Daten" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel>
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasStripeData}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding HasStripeData}" Value="False">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                                    <TextBlock Text="✅" FontSize="12" Margin="0,0,5,0"/>
                                    <TextBlock Text="Geladen" FontWeight="SemiBold" Foreground="#4CAF50"/>
                                </StackPanel>

                                <TextBlock FontSize="11" Foreground="#666">
                                    <Run Text="{Binding StripeTransactionCount, Mode=OneWay}"/>
                                    <Run Text="Transaktionen"/>
                                </TextBlock>
                            </StackPanel>

                            <StackPanel>
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasStripeData}" Value="False">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding HasStripeData}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                                    <TextBlock Text="⏳" FontSize="12" Margin="0,0,5,0"/>
                                    <TextBlock Text="Noch nicht geladen" FontWeight="SemiBold" Foreground="#FF9800"/>
                                </StackPanel>

                                <TextBlock Text="CSV-Datei laden" FontSize="11" Foreground="#666"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Chargecloud Status Card -->
                    <Border Grid.Column="1" BorderBrush="#FFF3E0" BorderThickness="2" CornerRadius="8" Margin="5" Padding="15">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="White"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasChargecloudData}" Value="True">
                                        <Setter Property="Background" Value="#E8F5E8"/>
                                        <Setter Property="BorderBrush" Value="#4CAF50"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding HasChargecloudData}" Value="False">
                                        <Setter Property="Background" Value="#F8F9FA"/>
                                        <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="⚡" FontSize="20" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="Chargecloud-Daten" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel>
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasChargecloudData}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding HasChargecloudData}" Value="False">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                                    <TextBlock Text="✅" FontSize="12" Margin="0,0,5,0"/>
                                    <TextBlock Text="Geladen" FontWeight="SemiBold" Foreground="#4CAF50"/>
                                </StackPanel>

                                <TextBlock FontSize="11" Foreground="#666">
                                    <Run Text="{Binding ChargecloudTransactionCount, Mode=OneWay}"/>
                                    <Run Text="Transaktionen"/>
                                </TextBlock>
                            </StackPanel>

                            <StackPanel>
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasChargecloudData}" Value="False">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding HasChargecloudData}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                                    <TextBlock Text="⏳" FontSize="12" Margin="0,0,5,0"/>
                                    <TextBlock Text="Noch nicht geladen" FontWeight="SemiBold" Foreground="#FF9800"/>
                                </StackPanel>

                                <TextBlock Text="CSV-Datei laden" FontSize="11" Foreground="#666"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Comparison Status Card -->
                    <Border Grid.Column="2" BorderBrush="#E8F5E8" BorderThickness="2" CornerRadius="8" Margin="5" Padding="15">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="White"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasData}" Value="True">
                                        <Setter Property="Background" Value="#E8F5E8"/>
                                        <Setter Property="BorderBrush" Value="#4CAF50"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding HasData}" Value="False">
                                        <Setter Property="Background" Value="#F8F9FA"/>
                                        <Setter Property="BorderBrush" Value="#E0E0E0"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="🔄" FontSize="20" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="Vergleich" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel>
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasData}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding HasData}" Value="False">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                                    <TextBlock Text="✅" FontSize="12" Margin="0,0,5,0"/>
                                    <TextBlock Text="Abgeschlossen" FontWeight="SemiBold" Foreground="#4CAF50"/>
                                </StackPanel>

                                <TextBlock FontSize="11" Foreground="#666">
                                    <Run Text="{Binding TotalTransactions, Mode=OneWay}"/>
                                    <Run Text="verglichen"/>
                                </TextBlock>

                                <TextBlock FontSize="10" Foreground="#666" Margin="0,2,0,0">
                                    <Run Text="{Binding ProblemsCount, Mode=OneWay}"/>
                                    <Run Text="Probleme gefunden"/>
                                </TextBlock>
                            </StackPanel>

                            <StackPanel>
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasData}" Value="False">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding HasData}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>

                                <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                                    <TextBlock Text="⏳" FontSize="12" Margin="0,0,5,0"/>
                                    <TextBlock Text="Warten auf Daten" FontWeight="SemiBold" Foreground="#FF9800"/>
                                </StackPanel>

                                <TextBlock Text="Beide Dateien laden" FontSize="11" Foreground="#666"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Buttons Row -->
                <StackPanel Orientation="Horizontal">
                    <Button Content="🔄 Refresh" 
                            Style="{StaticResource ModernButtonStyle}"
                            Command="{Binding RefreshDataCommand}"
                            ToolTip="Daten neu vergleichen"/>

                    <Button Content="📁 Stripe Datei" 
                            Style="{StaticResource ModernButtonStyle}"
                            Command="{Binding LoadStripeFileCommand}"
                            ToolTip="Stripe CSV-Datei laden"/>

                    <Button Content="📁 Chargecloud Datei" 
                            Style="{StaticResource ModernButtonStyle}"
                            Command="{Binding LoadChargecloudFileCommand}"
                            ToolTip="Chargecloud CSV-Datei laden"/>

                    <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="10,0"/>

                    <!-- Edit Mode Button -->
                    <Button Style="{StaticResource EditModeButtonStyle}"
                            Command="{Binding ToggleEditModeCommand}"
                            ToolTip="Bearbeitungsmodus aktivieren/deaktivieren">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="✏️" Margin="0,0,5,0"/>
                                <TextBlock>
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="Bearbeiten"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsEditMode}" Value="True">
                                                    <Setter Property="Text" Value="Fertig"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <Button Content="📊 Excel Export" 
                            Style="{StaticResource SuccessButtonStyle}"
                            Command="{Binding ExportToExcelCommand}"
                            ToolTip="Ergebnisse nach Excel exportieren"/>

                    <TextBox x:Name="SearchTextBox" 
                             Width="200" 
                             Margin="20,0,0,0"
                             Padding="8,6"
                             Text="{Binding FilterOptions.SearchText, UpdateSourceTrigger=PropertyChanged}"
                             FontSize="12">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                            <Border Background="White" 
                                                    BorderBrush="#DDD" 
                                                    BorderThickness="1" 
                                                    CornerRadius="4">
                                                <Grid>
                                                    <ScrollViewer x:Name="PART_ContentHost" 
                                                                Margin="8,0,25,0" 
                                                                VerticalAlignment="Center"/>
                                                    <TextBlock Text="🔍 Suche..." 
                                                             Foreground="#999" 
                                                             Margin="8,0,25,0" 
                                                             VerticalAlignment="Center"
                                                             IsHitTestVisible="False">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource AncestorType=TextBox}}" Value="">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </Grid>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Style>
                    </TextBox>

                    <!-- Loading Indicator -->
                    <StackPanel Orientation="Horizontal" Margin="20,0,0,0" VerticalAlignment="Center">
                        <ProgressBar Width="100" Height="4" IsIndeterminate="{Binding IsLoading}">
                            <ProgressBar.Style>
                                <Style TargetType="ProgressBar">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ProgressBar.Style>
                        </ProgressBar>
                        <TextBlock Text="Lädt..." Margin="10,0,0,0" Foreground="#666">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Filter Panel -->
        <Border Grid.Row="1" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="10">
            <StackPanel>
                <!-- Erste Filterzeile -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,10">
                    <TextBlock Text="Filter:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,10,0"/>

                    <!-- Kunden-Filter -->
                    <Grid>
                        <ComboBox Width="250" Margin="5,0"
                                  ItemsSource="{Binding AvailableCustomers}"
                                  SelectedItem="{Binding FilterOptions.SelectedCustomer}"
                                  ToolTip="Nach Kunde filtern">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" MaxWidth="180" TextTrimming="CharacterEllipsis"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <TextBlock Text="🧑‍💼 Alle Kunden" 
                                   Foreground="#999" 
                                   Margin="8,0,0,0" 
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding FilterOptions.SelectedCustomer}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>

                    <!-- Monats-Filter -->
                    <Grid>
                        <ComboBox Width="80" Margin="5,0"
                                  ItemsSource="{Binding AvailableMonths}"
                                  SelectedItem="{Binding FilterOptions.SelectedMonth}"
                                  ToolTip="Nach Monat filtern">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding StringFormat=D2}"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <TextBlock Text="📅 Monat" 
                                   Foreground="#999" 
                                   Margin="8,0,0,0" 
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding FilterOptions.SelectedMonth}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>

                    <!-- Jahres-Filter -->
                    <Grid>
                        <ComboBox Width="80" Margin="5,0"
                                  ItemsSource="{Binding AvailableYears}"
                                  SelectedItem="{Binding FilterOptions.SelectedYear}"
                                  ToolTip="Nach Jahr filtern"/>
                        <TextBlock Text="📅 Jahr" 
                                   Foreground="#999" 
                                   Margin="8,0,0,0" 
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding FilterOptions.SelectedYear}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>

                    <!-- Status-Filter -->
                    <Grid>
                        <ComboBox Margin="5,0,5,0"
                                  ItemsSource="{Binding AvailableStatusFilters}"
                                  SelectedItem="{Binding FilterOptions.SelectedStatusFilter}"
                                  ToolTip="Nach Status filtern" Width="185">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Icon}" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding DisplayName}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <TextBlock Text="📊 Status" 
                                   Foreground="#999" 
                                   Margin="12,0,-16,0" 
                                   VerticalAlignment="Center"
                                   IsHitTestVisible="False">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding FilterOptions.SelectedStatusFilter}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>

                    <Button Content="🗑 Filter löschen" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding ClearFiltersCommand}"
                            ToolTip="Alle Filter zurücksetzen" 
                            Width="139"/>
                </StackPanel>

                <!-- Zweite Zeile: Quick-Filter Buttons -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Schnellfilter:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,10,0"/>

                    <Button Content="✅ Nur Übereinstimmungen" 
                            Style="{StaticResource SuccessButtonStyle}"
                            Command="{Binding ShowOnlyMatchesCommand}"
                            Padding="8,4"
                            FontSize="11"
                            ToolTip="Nur perfekte Übereinstimmungen anzeigen"/>

                    <Button Content="⚠ Nur Probleme" 
                            Style="{StaticResource WarningButtonStyle}"
                            Command="{Binding ShowOnlyProblemsCommand}"
                            Padding="8,4"
                            FontSize="11"
                            ToolTip="Nur problematische Transaktionen anzeigen"/>

                    <Button Content="💰 Betragsabweichungen" 
                            Style="{StaticResource DangerButtonStyle}"
                            Command="{Binding ShowOnlyAmountMismatchCommand}"
                            Padding="8,4"
                            FontSize="11"
                            ToolTip="Nur Transaktionen mit Betragsabweichungen anzeigen"/>

                    <Button Content="👍 Manuell bestätigt" 
                            Style="{StaticResource SuccessButtonStyle}"
                            Command="{Binding ShowManuallyConfirmedCommand}"
                            Padding="8,4"
                            FontSize="11"
                            ToolTip="Nur manuell bestätigte Transaktionen anzeigen"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Edit Mode Panel -->
        <Border Grid.Row="2" Background="#FFF3E0" BorderBrush="#FF9800" BorderThickness="2" CornerRadius="4" Padding="12,8" Margin="5">
            <Border.Style>
                <Style TargetType="Border">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsEditMode}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsEditMode}" Value="False">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Links: Status -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="✏️" FontSize="18" Margin="0,0,8,0"/>
                    <TextBlock Text="{Binding EditModeStatusText}" FontWeight="SemiBold" FontSize="14"/>
                </StackPanel>

                <!-- Mitte: Anweisungen -->
                <TextBlock Grid.Column="1" 
                           Text="Wählen Sie Transaktionen per Checkbox aus und verwenden Sie die Buttons zum Matchen oder Aufheben"
                           FontSize="12" 
                           Foreground="#666" 
                           VerticalAlignment="Center" 
                           Margin="20,0"/>

                <!-- Rechts: Action Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="🔗 Matchen" 
                            Style="{StaticResource SuccessButtonStyle}"
                            Command="{Binding ManualMatchCommand}"
                            Padding="10,6"
                            FontSize="12"
                            ToolTip="Ausgewählte Transaktionen manuell verknüpfen"/>

                    <Button Content="🔓 Aufheben" 
                            Style="{StaticResource DangerButtonStyle}"
                            Command="{Binding UnmatchCommand}"
                            Padding="10,6"
                            FontSize="12"
                            ToolTip="Ausgewählte Matches aufheben"/>

                    <Button Content="🗑 Auswahl löschen" 
                            Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding ClearSelectionCommand}"
                            Padding="10,6"
                            FontSize="12"
                            ToolTip="Alle Auswahlmarkierungen entfernen"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="3" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Transaction List -->
            <Border Grid.Column="0" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- List Header -->
                    <Border Grid.Row="0" Background="#F8F9FA" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Transaktionen" FontSize="14" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding DisplayStatusInfo, Mode=OneWay}" 
                                      FontSize="12" 
                                      Foreground="#666" 
                                      Margin="20,0,0,0" 
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- DataGrid mit Checkbox-Spalte -->
                    <DataGrid Grid.Row="1" 
                              Style="{StaticResource ModernDataGridStyle}"
                              ItemsSource="{Binding FilteredComparisonsView}"
                              SelectedItem="{Binding SelectedTransaction}"
                              MouseDoubleClick="DataGrid_MouseDoubleClick"
                              Sorting="DataGrid_Sorting">
                        <DataGrid.Columns>
                            <!-- Checkbox-Spalte für Edit Mode -->
                            <DataGridTemplateColumn Width="40" CanUserSort="False">
                                <DataGridTemplateColumn.Header>
                                    <CheckBox IsEnabled="False" ToolTip="Bearbeitungsmodus aktivieren um Transaktionen auszuwählen"/>
                                </DataGridTemplateColumn.Header>
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"
                                                  IsChecked="{Binding Path=IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                  Checked="TransactionCheckBox_Checked"
                                                  Unchecked="TransactionCheckBox_Unchecked">
                                            <CheckBox.Style>
                                                <Style TargetType="CheckBox">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Path=DataContext.IsEditMode, RelativeSource={RelativeSource AncestorType=Window}}" Value="True">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Path=DataContext.IsEditMode, RelativeSource={RelativeSource AncestorType=Window}}" Value="False">
                                                            <Setter Property="Visibility" Value="Hidden"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </CheckBox.Style>
                                        </CheckBox>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>

                            <DataGridTextColumn Header="Kunde" 
                                              Binding="{Binding CustomerEmail}" 
                                              Width="200"
                                              SortMemberPath="CustomerEmail"
                                              CanUserSort="True"/>
                            <DataGridTextColumn Header="Datum" 
                                              Binding="{Binding FormattedDate}" 
                                              Width="100"
                                              SortMemberPath="TransactionDate"
                                              CanUserSort="True"/>
                            <DataGridTextColumn Header="Betrag" 
                                              Binding="{Binding FormattedAmount}" 
                                              Width="100"
                                              SortMemberPath="Amount"
                                              CanUserSort="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="S" 
                                              Binding="{Binding StripeStatus}" 
                                              Width="30"
                                              SortMemberPath="HasStripeTransaction"
                                              CanUserSort="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="✓">
                                                <Setter Property="Foreground" Value="Green"/>
                                            </Trigger>
                                            <Trigger Property="Text" Value="✗">
                                                <Setter Property="Foreground" Value="Red"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="CC" 
                                              Binding="{Binding ChargecloudStatus}" 
                                              Width="30"
                                              SortMemberPath="HasChargecloudTransaction"
                                              CanUserSort="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="✓">
                                                <Setter Property="Foreground" Value="Green"/>
                                            </Trigger>
                                            <Trigger Property="Text" Value="✗">
                                                <Setter Property="Foreground" Value="Red"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <!-- Status-Spalte mit Match-Confidence Farben -->
                            <DataGridTemplateColumn Header="Status" 
                                                  Width="150"
                                                  SortMemberPath="Status"
                                                  CanUserSort="True">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="3" Padding="5,2" Margin="2">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <!-- Layer 1 Match: Satt-Grün -->
                                                        <MultiDataTrigger>
                                                            <MultiDataTrigger.Conditions>
                                                                <Condition Binding="{Binding Status}" Value="Match"/>
                                                                <Condition Binding="{Binding MatchConfidence}" Value="High"/>
                                                            </MultiDataTrigger.Conditions>
                                                            <Setter Property="Background" Value="#E8F5E8"/>
                                                        </MultiDataTrigger>

                                                        <!-- Layer 2 Match: Gelb-Grün -->
                                                        <MultiDataTrigger>
                                                            <MultiDataTrigger.Conditions>
                                                                <Condition Binding="{Binding Status}" Value="Match"/>
                                                                <Condition Binding="{Binding MatchConfidence}" Value="Medium"/>
                                                            </MultiDataTrigger.Conditions>
                                                            <Setter Property="Background" Value="#F1F8E9"/>
                                                        </MultiDataTrigger>

                                                        <!-- Layer 3 Match: Helles Orange -->
                                                        <MultiDataTrigger>
                                                            <MultiDataTrigger.Conditions>
                                                                <Condition Binding="{Binding Status}" Value="Match"/>
                                                                <Condition Binding="{Binding MatchConfidence}" Value="Low"/>
                                                            </MultiDataTrigger.Conditions>
                                                            <Setter Property="Background" Value="#FFF8E1"/>
                                                        </MultiDataTrigger>

                                                        <!-- Manuelle Bestätigung: Dunkel-Grün -->
                                                        <MultiDataTrigger>
                                                            <MultiDataTrigger.Conditions>
                                                                <Condition Binding="{Binding Status}" Value="Match"/>
                                                                <Condition Binding="{Binding MatchConfidence}" Value="Manual"/>
                                                            </MultiDataTrigger.Conditions>
                                                            <Setter Property="Background" Value="#C8E6C9"/>
                                                        </MultiDataTrigger>

                                                        <!-- Standard Match (fallback) -->
                                                        <DataTrigger Binding="{Binding Status}" Value="Match">
                                                            <Setter Property="Background" Value="#E8F5E8"/>
                                                        </DataTrigger>

                                                        <!-- Bestehende Probleme -->
                                                        <DataTrigger Binding="{Binding Status}" Value="OnlyStripe">
                                                            <Setter Property="Background" Value="#FFF3E0"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="OnlyChargecloud">
                                                            <Setter Property="Background" Value="#FFF3E0"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="AmountMismatch">
                                                            <Setter Property="Background" Value="#FFEBEE"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="ManuallyRejected">
                                                            <Setter Property="Background" Value="#F5F5F5"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding StatusText}" 
                                                     FontSize="11" 
                                                     TextAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <!-- Match-Confidence Farben -->
                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding Status}" Value="Match"/>
                                                                    <Condition Binding="{Binding MatchConfidence}" Value="High"/>
                                                                </MultiDataTrigger.Conditions>
                                                                <Setter Property="Foreground" Value="#2E7D32"/>
                                                            </MultiDataTrigger>

                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding Status}" Value="Match"/>
                                                                    <Condition Binding="{Binding MatchConfidence}" Value="Medium"/>
                                                                </MultiDataTrigger.Conditions>
                                                                <Setter Property="Foreground" Value="#558B2F"/>
                                                            </MultiDataTrigger>

                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding Status}" Value="Match"/>
                                                                    <Condition Binding="{Binding MatchConfidence}" Value="Low"/>
                                                                </MultiDataTrigger.Conditions>
                                                                <Setter Property="Foreground" Value="#F57C00"/>
                                                            </MultiDataTrigger>

                                                            <MultiDataTrigger>
                                                                <MultiDataTrigger.Conditions>
                                                                    <Condition Binding="{Binding Status}" Value="Match"/>
                                                                    <Condition Binding="{Binding MatchConfidence}" Value="Manual"/>
                                                                </MultiDataTrigger.Conditions>
                                                                <Setter Property="Foreground" Value="#1B5E20"/>
                                                            </MultiDataTrigger>

                                                            <!-- Standard Match -->
                                                            <DataTrigger Binding="{Binding Status}" Value="Match">
                                                                <Setter Property="Foreground" Value="#2E7D32"/>
                                                            </DataTrigger>

                                                            <!-- Bestehende Probleme -->
                                                            <DataTrigger Binding="{Binding Status}" Value="OnlyStripe">
                                                                <Setter Property="Foreground" Value="#F57C00"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="OnlyChargecloud">
                                                                <Setter Property="Foreground" Value="#F57C00"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="AmountMismatch">
                                                                <Setter Property="Foreground" Value="#C62828"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="ManuallyRejected">
                                                                <Setter Property="Foreground" Value="#757575"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" 
                         Background="#E0E0E0" 
                         HorizontalAlignment="Stretch" 
                         VerticalAlignment="Stretch"/>

            <!-- Detail Panel -->
            <Border Grid.Column="2" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Detail Header -->
                    <Border Grid.Row="0" Background="#F8F9FA" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Detailansicht" FontSize="14" FontWeight="SemiBold"/>
                            <Button Content="🔗 Neues Fenster" 
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Command="{Binding OpenDetailWindowCommand}"
                                    Margin="10,0,0,0"
                                    Padding="8,4"
                                    FontSize="11"/>
                        </StackPanel>
                    </Border>

                    <!-- Detail Content -->
                    <ScrollViewer Grid.Row="1" Padding="10" VerticalScrollBarVisibility="Auto">
                        <Grid>
                            <!-- Transaktionsdetails -->
                            <StackPanel DataContext="{Binding SelectedTransaction}">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>

                                <!-- Allgemeine Informationen -->
                                <TextBlock Text="Allgemeine Informationen" FontWeight="Bold" Margin="0,0,0,10"/>
                                <Grid Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Kunde:" FontWeight="SemiBold" Margin="0,2"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding CustomerEmail}" Margin="10,2"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Datum:" FontWeight="SemiBold" Margin="0,2"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding FormattedDate}" Margin="10,2"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Betrag:" FontWeight="SemiBold" Margin="0,2"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding FormattedAmount}" Margin="10,2"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Status:" FontWeight="SemiBold" Margin="0,2"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding StatusText}" Margin="10,2"/>
                                </Grid>

                                <!-- Stripe Details -->
                                <TextBlock Text="Stripe Details" FontWeight="Bold" Margin="0,10,0,5"/>
                                <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Padding="10" Margin="0,0,0,15">
                                    <TextBlock Text="{Binding StripeDetails}" 
                                             FontFamily="Consolas" 
                                             FontSize="11" 
                                             Foreground="#333"/>
                                </Border>

                                <!-- Chargecloud Details -->
                                <TextBlock Text="Chargecloud Details" FontWeight="Bold" Margin="0,0,0,5"/>
                                <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Padding="10" Margin="0,0,0,15">
                                    <TextBlock Text="{Binding ChargecloudDetails}" 
                                             FontFamily="Consolas" 
                                             FontSize="11" 
                                             Foreground="#333"/>
                                </Border>
                            </StackPanel>

                            <!-- Placeholder wenn keine Auswahl -->
                            <TextBlock Text="Wählen Sie eine Transaktion aus der Liste aus, um Details anzuzeigen." 
                                     Foreground="#999" 
                                     TextAlignment="Center" 
                                     VerticalAlignment="Center"
                                     TextWrapping="Wrap"
                                     Margin="20">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedTransaction}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="4" Background="#FAFAFA" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Links: Version -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock FontWeight="SemiBold" Foreground="#2196F3" VerticalAlignment="Center">
                        <Run Text="v1.0.6"/>
                    </TextBlock>
                    <Rectangle Width="1" Height="16" Fill="#E0E0E0" Margin="10,0"/>
                </StackPanel>

                <!-- Mitte: Status-Informationen -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBlock Text="{Binding StatusMessage}" VerticalAlignment="Center"/>
                    <Rectangle Width="1" Height="16" Fill="#E0E0E0" Margin="15,0"/>
                    <TextBlock Text="{Binding DisplayStatusInfo}"
                              VerticalAlignment="Center" 
                              Foreground="#666"/>
                    <Rectangle Width="1" Height="16" Fill="#E0E0E0" Margin="15,0"/>
                </StackPanel>

                <!-- Rechts: Copyright -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Rectangle Width="1" Height="16" Fill="#E0E0E0" Margin="0,0,10,0"/>
                    <TextBlock Text="© 2025 SmartWerk" FontStyle="Italic" Foreground="#888" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>