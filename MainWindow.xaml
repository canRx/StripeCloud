<Window x:Class="StripeCloud.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodels="clr-namespace:StripeCloud.ViewModels"
        mc:Ignorable="d"
        Title="StripeCloud - Transaktionsvergleich" 
        Height="800" Width="1400" 
        MinHeight="600" MinWidth="1000"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <viewmodels:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <!-- Styles -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1565C0"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#757575"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#616161"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#424242"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#4CAF50"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#45a049"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid Styles -->
        <Style x:Key="ModernDataGridStyle" TargetType="DataGrid">
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AlternatingRowBackground" Value="#F8F9FA"/>
            <Setter Property="RowHeight" Value="35"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header/Toolbar -->
            <RowDefinition Height="Auto"/>
            <!-- Filter -->
            <RowDefinition Height="*"/>
            <!-- Main Content -->
            <RowDefinition Height="Auto"/>
            <!-- Status Bar -->
        </Grid.RowDefinitions>

        <!-- Header/Toolbar -->
        <Border Grid.Row="0" Background="#FAFAFA" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="10">
            <StackPanel Orientation="Horizontal">
                <Button Content="🔄 Refresh" 
                        Style="{StaticResource ModernButtonStyle}"
                        Command="{Binding RefreshDataCommand}"
                        ToolTip="Daten neu vergleichen"/>

                <Button Content="📁 Stripe Datei" 
                        Style="{StaticResource ModernButtonStyle}"
                        Command="{Binding LoadStripeFileCommand}"
                        ToolTip="Stripe CSV-Datei laden"/>

                <Button Content="📁 Chargecloud Datei" 
                        Style="{StaticResource ModernButtonStyle}"
                        Command="{Binding LoadChargecloudFileCommand}"
                        ToolTip="Chargecloud CSV-Datei laden"/>

                <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" Margin="10,0"/>

                <Button Content="📊 Excel Export" 
                        Style="{StaticResource SuccessButtonStyle}"
                        Command="{Binding ExportToExcelCommand}"
                        ToolTip="Ergebnisse nach Excel exportieren"/>

                <TextBox x:Name="SearchTextBox" 
                         Width="200" 
                         Margin="20,0,0,0"
                         Padding="8,6"
                         Text="{Binding FilterOptions.SearchText, UpdateSourceTrigger=PropertyChanged}"
                         FontSize="12">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border Background="White" 
                                                BorderBrush="#DDD" 
                                                BorderThickness="1" 
                                                CornerRadius="4">
                                            <Grid>
                                                <ScrollViewer x:Name="PART_ContentHost" 
                                                            Margin="8,0,25,0" 
                                                            VerticalAlignment="Center"/>
                                                <TextBlock Text="🔍 Suche..." 
                                                         Foreground="#999" 
                                                         Margin="8,0,25,0" 
                                                         VerticalAlignment="Center"
                                                         IsHitTestVisible="False">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource AncestorType=TextBox}}" Value="">
                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!-- Loading Indicator -->
                <StackPanel Orientation="Horizontal" Margin="20,0,0,0" VerticalAlignment="Center">
                    <ProgressBar Width="100" Height="4" IsIndeterminate="{Binding IsLoading}">
                        <ProgressBar.Style>
                            <Style TargetType="ProgressBar">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ProgressBar.Style>
                    </ProgressBar>
                    <TextBlock Text="Lädt..." Margin="10,0,0,0" Foreground="#666">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsLoading}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Filter Panel -->
        <Border Grid.Row="1" Background="#F5F5F5" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="10">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Filter:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,10,0"/>

                <ComboBox Width="200" Margin="5,0"
                          ItemsSource="{Binding AvailableCustomers}"
                          SelectedItem="{Binding FilterOptions.SelectedCustomer}"
                          ToolTip="Nach Kunde filtern"/>

                <ComboBox Width="80" Margin="5,0"
                          ItemsSource="{Binding AvailableMonths}"
                          SelectedItem="{Binding FilterOptions.SelectedMonth}"
                          ToolTip="Nach Monat filtern">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding StringFormat=D2}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <ComboBox Width="80" Margin="5,0"
                          ItemsSource="{Binding AvailableYears}"
                          SelectedItem="{Binding FilterOptions.SelectedYear}"
                          ToolTip="Nach Jahr filtern"/>

                <Button Content="🗑 Filter löschen" 
                        Style="{StaticResource SecondaryButtonStyle}"
                        Command="{Binding ClearFiltersCommand}"
                        Margin="20,0,0,0"
                        ToolTip="Alle Filter zurücksetzen"/>

                <TextBlock Text="{Binding FilterOptions.FilterSummary}" 
                          FontStyle="Italic" 
                          Foreground="#666" 
                          VerticalAlignment="Center" 
                          Margin="20,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Transaction List -->
            <Border Grid.Column="0" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- List Header -->
                    <Border Grid.Row="0" Background="#F8F9FA" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Transaktionen" FontSize="14" FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding StatisticsSummary}" 
                                      FontSize="12" 
                                      Foreground="#666" 
                                      Margin="20,0,0,0" 
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- DataGrid -->
                    <DataGrid Grid.Row="1" 
                              Style="{StaticResource ModernDataGridStyle}"
                              ItemsSource="{Binding FilteredComparisons}"
                              SelectedItem="{Binding SelectedTransaction}"
                              MouseDoubleClick="DataGrid_MouseDoubleClick">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Kunde" 
                                              Binding="{Binding CustomerEmail}" 
                                              Width="200"/>
                            <DataGridTextColumn Header="Datum" 
                                              Binding="{Binding FormattedDate}" 
                                              Width="100"/>
                            <DataGridTextColumn Header="Betrag" 
                                              Binding="{Binding FormattedAmount}" 
                                              Width="100">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="S" 
                                              Binding="{Binding StripeStatus}" 
                                              Width="30">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="✓">
                                                <Setter Property="Foreground" Value="Green"/>
                                            </Trigger>
                                            <Trigger Property="Text" Value="✗">
                                                <Setter Property="Foreground" Value="Red"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="CC" 
                                              Binding="{Binding ChargecloudStatus}" 
                                              Width="30">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="✓">
                                                <Setter Property="Foreground" Value="Green"/>
                                            </Trigger>
                                            <Trigger Property="Text" Value="✗">
                                                <Setter Property="Foreground" Value="Red"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTemplateColumn Header="Status" Width="150">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="3" Padding="5,2" Margin="2">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Status}" Value="Match">
                                                            <Setter Property="Background" Value="#E8F5E8"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="OnlyStripe">
                                                            <Setter Property="Background" Value="#FFF3E0"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="OnlyChargecloud">
                                                            <Setter Property="Background" Value="#FFF3E0"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Status}" Value="AmountMismatch">
                                                            <Setter Property="Background" Value="#FFEBEE"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding StatusText}" 
                                                     FontSize="11" 
                                                     TextAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="Match">
                                                                <Setter Property="Foreground" Value="#2E7D32"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="OnlyStripe">
                                                                <Setter Property="Foreground" Value="#F57C00"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="OnlyChargecloud">
                                                                <Setter Property="Foreground" Value="#F57C00"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="AmountMismatch">
                                                                <Setter Property="Foreground" Value="#C62828"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" 
                         Background="#E0E0E0" 
                         HorizontalAlignment="Stretch" 
                         VerticalAlignment="Stretch"/>

            <!-- Detail Panel -->
            <Border Grid.Column="2" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Detail Header -->
                    <Border Grid.Row="0" Background="#F8F9FA" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="10">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Detailansicht" FontSize="14" FontWeight="SemiBold"/>
                            <Button Content="🔗 Neues Fenster" 
                                    Style="{StaticResource SecondaryButtonStyle}"
                                    Command="{Binding OpenDetailWindowCommand}"
                                    Margin="10,0,0,0"
                                    Padding="8,4"
                                    FontSize="11"/>
                        </StackPanel>
                    </Border>

                    <!-- Detail Content -->
                    <ScrollViewer Grid.Row="1" Padding="10" VerticalScrollBarVisibility="Auto">
                        <Grid>
                            <!-- Transaktionsdetails -->
                            <StackPanel DataContext="{Binding SelectedTransaction}">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>

                                <!-- Allgemeine Informationen -->
                                <TextBlock Text="Allgemeine Informationen" FontWeight="Bold" Margin="0,0,0,10"/>
                                <Grid Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Kunde:" FontWeight="SemiBold" Margin="0,2"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding CustomerEmail}" Margin="10,2"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Datum:" FontWeight="SemiBold" Margin="0,2"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding FormattedDate}" Margin="10,2"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Betrag:" FontWeight="SemiBold" Margin="0,2"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding FormattedAmount}" Margin="10,2"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Status:" FontWeight="SemiBold" Margin="0,2"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding StatusText}" Margin="10,2"/>
                                </Grid>

                                <!-- Stripe Details -->
                                <TextBlock Text="Stripe Details" FontWeight="Bold" Margin="0,10,0,5"/>
                                <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Padding="10" Margin="0,0,0,15">
                                    <TextBlock Text="{Binding StripeDetails}" 
                                             FontFamily="Consolas" 
                                             FontSize="11" 
                                             Foreground="#333"/>
                                </Border>

                                <!-- Chargecloud Details -->
                                <TextBlock Text="Chargecloud Details" FontWeight="Bold" Margin="0,0,0,5"/>
                                <Border BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4" Padding="10" Margin="0,0,0,15">
                                    <TextBlock Text="{Binding ChargecloudDetails}" 
                                             FontFamily="Consolas" 
                                             FontSize="11" 
                                             Foreground="#333"/>
                                </Border>
                            </StackPanel>

                            <!-- Placeholder wenn keine Auswahl -->
                            <TextBlock Text="Wählen Sie eine Transaktion aus der Liste aus, um Details anzuzeigen." 
                                     Foreground="#999" 
                                     TextAlignment="Center" 
                                     VerticalAlignment="Center"
                                     TextWrapping="Wrap"
                                     Margin="20">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedTransaction}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#FAFAFA" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="10,5">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{Binding StatusMessage}" 
                          VerticalAlignment="Center"/>
                <Rectangle Width="1" Height="16" Fill="#E0E0E0" Margin="15,0"/>
                <TextBlock Text="{Binding FilteredComparisons.Count, StringFormat='Angezeigt: {0}'}" 
                          VerticalAlignment="Center" 
                          Foreground="#666"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>