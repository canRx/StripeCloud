<Window x:Class="StripeCloud.Views.TransactionDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Transaktionsdetails" 
        Height="800" Width="1000" 
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False">

    <Window.Resources>
        <!-- Styles -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="2" Opacity="0.1" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#555"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="MonospaceValueStyle" TargetType="TextBlock" BasedOn="{StaticResource ValueStyle}">
            <Setter Property="FontFamily" Value="Consolas, Courier New"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="Padding" Value="8"/>
        </Style>

        <Style x:Key="HeaderButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F0F0F0"/>
                                <Setter Property="BorderBrush" Value="#2196F3"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="FooterButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="35"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Margin" Value="8,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FAFAFA" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Transaktionsdetails" FontSize="20" FontWeight="Bold" Margin="0,0,0,4"/>
                    <TextBlock Text="{Binding CustomerEmail}" FontSize="14" Foreground="#666"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="📧 E-Mail" 
                            Style="{StaticResource HeaderButtonStyle}"
                            Command="{Binding CreateEmailCommand}"
                            ToolTip="E-Mail an Kunden erstellen"/>

                    <Button Content="📋 Kopieren" 
                            Style="{StaticResource HeaderButtonStyle}"
                            Command="{Binding CopyAllDataCommand}"
                            ToolTip="Alle Daten in Zwischenablage kopieren"/>

                    <Button Content="❌ Schließen" 
                            Style="{StaticResource HeaderButtonStyle}"
                            Click="CloseButton_Click"
                            ToolTip="Fenster schließen"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" Padding="20" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Allgemeine Informationen Card -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="📊" FontSize="20" Margin="0,0,8,0"/>
                            <TextBlock Text="Allgemeine Informationen" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                        </StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                <TextBlock Text="Kunde" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="{Binding CustomerEmail}" Style="{StaticResource ValueStyle}"/>

                                <TextBlock Text="Anzeigename" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="{Binding DisplayName}" Style="{StaticResource ValueStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Transaktionsdatum" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="{Binding TransactionDate}" Style="{StaticResource ValueStyle}"/>

                                <TextBlock Text="Betrag" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="{Binding Amount}" Style="{StaticResource ValueStyle}" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Grid>

                        <!-- Status-Anzeige -->
                        <Border CornerRadius="6" Padding="12,8" Margin="0,8,0,0">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="#E8F5E8"/>
                                    <Style.Triggers>
                                        <!-- Match mit verschiedenen Confidence-Levels -->
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Comparison.Status}" Value="Match"/>
                                                <Condition Binding="{Binding Comparison.MatchConfidence}" Value="High"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Background" Value="#E8F5E8"/>
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Comparison.Status}" Value="Match"/>
                                                <Condition Binding="{Binding Comparison.MatchConfidence}" Value="Medium"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Background" Value="#F1F8E9"/>
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Comparison.Status}" Value="Match"/>
                                                <Condition Binding="{Binding Comparison.MatchConfidence}" Value="Low"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Background" Value="#FFF8E1"/>
                                        </MultiDataTrigger>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Comparison.Status}" Value="Match"/>
                                                <Condition Binding="{Binding Comparison.MatchConfidence}" Value="Manual"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Background" Value="#C8E6C9"/>
                                        </MultiDataTrigger>
                                        <!-- Andere Status -->
                                        <DataTrigger Binding="{Binding Comparison.Status}" Value="OnlyStripe">
                                            <Setter Property="Background" Value="#FFF3E0"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Comparison.Status}" Value="OnlyChargecloud">
                                            <Setter Property="Background" Value="#FFF3E0"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Comparison.Status}" Value="AmountMismatch">
                                            <Setter Property="Background" Value="#FFEBEE"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Comparison.Status}" Value="ManuallyRejected">
                                            <Setter Property="Background" Value="#F5F5F5"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <TextBlock Text="{Binding Status}" 
                                       FontWeight="SemiBold" 
                                       HorizontalAlignment="Center">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#2E7D32"/>
                                        <Style.Triggers>
                                            <!-- Text-Farben für verschiedene Confidence-Levels -->
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding Comparison.Status}" Value="Match"/>
                                                    <Condition Binding="{Binding Comparison.MatchConfidence}" Value="High"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Foreground" Value="#2E7D32"/>
                                            </MultiDataTrigger>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding Comparison.Status}" Value="Match"/>
                                                    <Condition Binding="{Binding Comparison.MatchConfidence}" Value="Medium"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Foreground" Value="#558B2F"/>
                                            </MultiDataTrigger>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding Comparison.Status}" Value="Match"/>
                                                    <Condition Binding="{Binding Comparison.MatchConfidence}" Value="Low"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Foreground" Value="#F57C00"/>
                                            </MultiDataTrigger>
                                            <MultiDataTrigger>
                                                <MultiDataTrigger.Conditions>
                                                    <Condition Binding="{Binding Comparison.Status}" Value="Match"/>
                                                    <Condition Binding="{Binding Comparison.MatchConfidence}" Value="Manual"/>
                                                </MultiDataTrigger.Conditions>
                                                <Setter Property="Foreground" Value="#1B5E20"/>
                                            </MultiDataTrigger>
                                            <!-- Andere Status-Farben -->
                                            <DataTrigger Binding="{Binding Comparison.Status}" Value="OnlyStripe">
                                                <Setter Property="Foreground" Value="#F57C00"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Comparison.Status}" Value="OnlyChargecloud">
                                                <Setter Property="Foreground" Value="#F57C00"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Comparison.Status}" Value="AmountMismatch">
                                                <Setter Property="Foreground" Value="#C62828"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Comparison.Status}" Value="ManuallyRejected">
                                                <Setter Property="Foreground" Value="#757575"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Match-Confidence Section (nur wenn vorhanden) -->
                <Border>
                    <Border.Style>
                        <Style TargetType="Border" BasedOn="{StaticResource CardStyle}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HasMatchConfidence}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding HasMatchConfidence}" Value="False">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                                <!-- Verschiedene Confidence-Level Styles -->
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding HasMatchConfidence}" Value="True"/>
                                        <Condition Binding="{Binding Comparison.MatchConfidence}" Value="High"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="BorderBrush" Value="#4CAF50"/>
                                    <Setter Property="Background" Value="#E8F5E8"/>
                                </MultiDataTrigger>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding HasMatchConfidence}" Value="True"/>
                                        <Condition Binding="{Binding Comparison.MatchConfidence}" Value="Medium"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="BorderBrush" Value="#8BC34A"/>
                                    <Setter Property="Background" Value="#F1F8E9"/>
                                </MultiDataTrigger>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding HasMatchConfidence}" Value="True"/>
                                        <Condition Binding="{Binding Comparison.MatchConfidence}" Value="Low"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="BorderBrush" Value="#FFC107"/>
                                    <Setter Property="Background" Value="#FFF8E1"/>
                                </MultiDataTrigger>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding HasMatchConfidence}" Value="True"/>
                                        <Condition Binding="{Binding Comparison.MatchConfidence}" Value="Manual"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="BorderBrush" Value="#2E7D32"/>
                                    <Setter Property="Background" Value="#C8E6C9"/>
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>

                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="🎯" FontSize="20" Margin="0,0,8,0"/>
                            <TextBlock Text="Match-Analyse" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                        </StackPanel>

                        <!-- Match-Level Anzeige -->
                        <Grid Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Match-Level" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="{Binding MatchConfidenceText}" Style="{StaticResource ValueStyle}" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Grid>

                        <!-- Erklärung -->
                        <TextBlock Text="{Binding ConfidenceExplanation}" 
                                   Style="{StaticResource ValueStyle}" 
                                   TextWrapping="Wrap" 
                                   FontStyle="Italic"
                                   Foreground="#555"
                                   Margin="0,0,0,16"/>

                        <!-- Bestätigungs-Buttons (nur wenn nötig) -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ShowConfirmationButtons}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding ShowConfirmationButtons}" Value="False">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>

                            <Button Content="✅ Match bestätigen" 
                                    Width="140" 
                                    Style="{StaticResource FooterButtonStyle}"
                                    Background="#4CAF50" 
                                    Foreground="White" 
                                    Margin="0,0,12,0"
                                    Command="{Binding ConfirmMatchCommand}"
                                    ToolTip="Bestätigen dass diese Transaktionen zusammengehören"/>

                            <Button Content="❌ Match aufheben" 
                                    Width="120" 
                                    Style="{StaticResource FooterButtonStyle}"
                                    Background="#F44336" 
                                    Foreground="White" 
                                    Command="{Binding RejectMatchCommand}"
                                    ToolTip="Transaktionen als nicht zusammengehörig markieren"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Stripe Details Card -->
                <Border>
                    <Border.Style>
                        <Style TargetType="Border" BasedOn="{StaticResource CardStyle}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HasStripeTransaction}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding HasStripeTransaction}" Value="False">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>

                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="💳" FontSize="20" Margin="0,0,8,0"/>
                            <TextBlock Text="Stripe Transaktion" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                        </StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                <TextBlock Text="Stripe ID" Style="{StaticResource LabelStyle}"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding StripeId}" Style="{StaticResource MonospaceValueStyle}" Width="200"/>
                                    <Button Content="📋" 
                                            Style="{StaticResource HeaderButtonStyle}"
                                            Command="{Binding CopyStripeIdCommand}"
                                            Width="30" Height="25" Padding="0"
                                            ToolTip="Stripe ID kopieren"/>
                                </StackPanel>

                                <TextBlock Text="Betrag" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="{Binding StripeAmount}" Style="{StaticResource ValueStyle}"/>

                                <TextBlock Text="Nettobetrag" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="{Binding StripeNetAmount}" Style="{StaticResource ValueStyle}"/>

                                <TextBlock Text="Status" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="{Binding StripeStatus}" Style="{StaticResource ValueStyle}"/>

                                <TextBlock Text="Währung" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="{Binding StripeCurrency}" Style="{StaticResource ValueStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Erstellt am" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="{Binding StripeDate}" Style="{StaticResource ValueStyle}"/>

                                <TextBlock Text="Gebühr" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="{Binding StripeFee}" Style="{StaticResource ValueStyle}"/>

                                <TextBlock Text="Rückerstattet" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="{Binding StripeRefunded}" Style="{StaticResource ValueStyle}"/>

                                <TextBlock Text="Kunden-ID" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="{Binding StripeCustomerId}" Style="{StaticResource ValueStyle}"/>

                                <TextBlock Text="Rechnungs-ID" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="{Binding StripeInvoiceId}" Style="{StaticResource ValueStyle}"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="Beschreibung" Style="{StaticResource LabelStyle}" Margin="0,8,0,4"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding StripeDescription}" 
                                       Style="{StaticResource MonospaceValueStyle}" 
                                       Width="400"
                                       TextTrimming="CharacterEllipsis"/>
                            <Button Content="📋" 
                                    Style="{StaticResource HeaderButtonStyle}"
                                    Command="{Binding CopyStripeDescriptionCommand}"
                                    Width="30" Height="25" Padding="0"
                                    ToolTip="Beschreibung kopieren"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Chargecloud Details Card -->
                <Border>
                    <Border.Style>
                        <Style TargetType="Border" BasedOn="{StaticResource CardStyle}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HasChargecloudTransaction}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding HasChargecloudTransaction}" Value="False">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>

                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="⚡" FontSize="20" Margin="0,0,8,0"/>
                            <TextBlock Text="Chargecloud Transaktion" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                        </StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                <TextBlock Text="Rechnungsnummer" Style="{StaticResource LabelStyle}"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding ChargecloudInvoiceNumber}" 
                                               Style="{StaticResource MonospaceValueStyle}" 
                                               Width="200"/>
                                    <Button Content="📋" 
                                            Style="{StaticResource HeaderButtonStyle}"
                                            Command="{Binding CopyChargecloudInvoiceCommand}"
                                            Width="30" Height="25" Padding="0"
                                            ToolTip="Rechnungsnummer kopieren"/>
                                </StackPanel>

                                <TextBlock Text="Betrag" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="{Binding ChargecloudAmount}" Style="{StaticResource ValueStyle}"/>

                                <TextBlock Text="Status" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="{Binding ChargecloudStatus}" Style="{StaticResource ValueStyle}"/>

                                <TextBlock Text="Typ" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="{Binding ChargecloudType}" Style="{StaticResource ValueStyle}"/>

                                <TextBlock Text="Zahlungsmethode" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="{Binding ChargecloudPaymentMethod}" Style="{StaticResource ValueStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Belegdatum" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="{Binding ChargecloudDate}" Style="{StaticResource ValueStyle}"/>

                                <TextBlock Text="Bruttobetrag" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="{Binding ChargecloudInvoiceAmountGross}" Style="{StaticResource ValueStyle}"/>

                                <TextBlock Text="Bezahlt" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="{Binding ChargecloudAmountPaid}" Style="{StaticResource ValueStyle}"/>

                                <TextBlock Text="Offener Betrag" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="{Binding ChargecloudOpenAmount}" Style="{StaticResource ValueStyle}"/>

                                <TextBlock Text="Buchungsnummer" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="{Binding ChargecloudBookingNumber}" Style="{StaticResource ValueStyle}"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="Vertrag" Style="{StaticResource LabelStyle}" Margin="0,8,0,4"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding ChargecloudContract}" 
                                       Style="{StaticResource MonospaceValueStyle}" 
                                       Width="400"/>
                            <Button Content="📋" 
                                    Style="{StaticResource HeaderButtonStyle}"
                                    Command="{Binding CopyChargecloudContractCommand}"
                                    Width="30" Height="25" Padding="0"
                                    ToolTip="Vertrag kopieren"/>
                        </StackPanel>

                        <TextBlock Text="Leistungszeitraum" Style="{StaticResource LabelStyle}" Margin="0,8,0,4"/>
                        <TextBlock Text="{Binding ChargecloudServicePeriod}" Style="{StaticResource ValueStyle}"/>
                    </StackPanel>
                </Border>

                <!-- Vergleichsanalyse Card (nur wenn beide Transaktionen vorhanden) -->
                <Border>
                    <Border.Style>
                        <Style TargetType="Border" BasedOn="{StaticResource CardStyle}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Comparison.HasBothTransactions}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Comparison.HasBothTransactions}" Value="False">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>

                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="🔍" FontSize="20" Margin="0,0,8,0"/>
                            <TextBlock Text="Vergleichsanalyse" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                        </StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,20,0">
                                <TextBlock Text="Matching-Score" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="{Binding MatchingScore}" Style="{StaticResource ValueStyle}"/>

                                <TextBlock Text="Timeline-Analyse" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="{Binding TimelineAnalysis}" Style="{StaticResource ValueStyle}"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Betragsanalyse" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="{Binding AmountAnalysis}" Style="{StaticResource ValueStyle}"/>

                                <TextBlock Text="Betragsunterschied" Style="{StaticResource LabelStyle}"/>
                                <TextBlock Text="{Binding AmountDifference}" 
                                           FontWeight="SemiBold">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock" BasedOn="{StaticResource ValueStyle}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding HasAmountDiscrepancy}" Value="True">
                                                    <Setter Property="Foreground" Value="#D32F2F"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding HasAmountDiscrepancy}" Value="False">
                                                    <Setter Property="Foreground" Value="#2E7D32"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Diskrepanz-Details Card (nur wenn Diskrepanz vorhanden) -->
                <Border>
                    <Border.Style>
                        <Style TargetType="Border" BasedOn="{StaticResource CardStyle}">
                            <Setter Property="BorderBrush" Value="#FF9800"/>
                            <Setter Property="Background" Value="#FFF8E1"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding HasDiscrepancy}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding HasDiscrepancy}" Value="False">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>

                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="⚠️" FontSize="20" Margin="0,0,8,0"/>
                            <TextBlock Text="Problembeschreibung" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                        </StackPanel>

                        <TextBlock Text="{Binding DiscrepancyDescription}" 
                                   Style="{StaticResource ValueStyle}" 
                                   TextWrapping="Wrap"
                                   FontWeight="SemiBold"
                                   Foreground="#F57C00"/>
                    </StackPanel>
                </Border>

                <!-- Keine Transaktionen gefunden Card -->
                <Border>
                    <Border.Style>
                        <Style TargetType="Border" BasedOn="{StaticResource CardStyle}">
                            <Setter Property="BorderBrush" Value="#FF5722"/>
                            <Setter Property="Background" Value="#FFEBEE"/>
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding HasStripeTransaction}" Value="False"/>
                                        <Condition Binding="{Binding HasChargecloudTransaction}" Value="False"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Visible"/>
                                </MultiDataTrigger>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding HasStripeTransaction}" Value="True"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </MultiDataTrigger>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding HasChargecloudTransaction}" Value="True"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>

                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                            <TextBlock Text="❌" FontSize="20" Margin="0,0,8,0"/>
                            <TextBlock Text="Keine Transaktionsdaten" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                        </StackPanel>

                        <TextBlock Text="Für diese Transaktion sind keine Details verfügbar." 
                                   Style="{StaticResource ValueStyle}" 
                                   TextWrapping="Wrap"
                                   Foreground="#D32F2F"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#FAFAFA" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="🔍" FontSize="14" Margin="0,0,8,0"/>
                    <TextBlock Text="Doppelklick auf Werte zum Kopieren" 
                               FontSize="12" 
                               Foreground="#666"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="📊 Alle Daten kopieren" 
                            Style="{StaticResource FooterButtonStyle}"
                            Background="#2196F3" 
                            Foreground="White" 
                            Command="{Binding CopyAllDataCommand}"/>

                    <Button Content="📧 E-Mail erstellen" 
                            Style="{StaticResource FooterButtonStyle}"
                            Background="#4CAF50" 
                            Foreground="White" 
                            Command="{Binding CreateEmailCommand}"/>

                    <Button Content="Schließen" 
                            Style="{StaticResource FooterButtonStyle}"
                            Background="#757575" 
                            Foreground="White" 
                            Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>