<Window x:Class="StripeCloud.Views.TransactionDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Transaktionsdetails" Height="800" Width="1200"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="#F8F9FA">

    <Window.Resources>
        <!-- Modern Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E1E5E9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" Direction="270" ShadowDepth="2" Opacity="0.1" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Section Header Style -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2C3E50"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <!-- Label Style -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#6C757D"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
        </Style>

        <!-- Value Style -->
        <Style x:Key="ValueStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#212529"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <!-- Copy Button Style - KORRIGIERT -->
        <Style x:Key="CopyButtonStyle" TargetType="Button">
            <Setter Property="Content" Value="📋"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="#F8F9FA"/>
            <Setter Property="BorderBrush" Value="#DEE2E6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="ToolTip" Value="In Zwischenablage kopieren"/>
            <Setter Property="Margin" Value="8,0,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                Padding="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E9ECEF"/>
                                <Setter Property="BorderBrush" Value="#ADB5BD"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#DEE2E6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Status Badge Style -->
        <Style x:Key="StatusBadgeStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>

        <!-- Footer Button Style -->
        <Style x:Key="FooterButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="36"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Info Grid Style -->
        <Style x:Key="InfoItemStyle" TargetType="Grid">
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Style="{StaticResource CardStyle}" Margin="0,0,0,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Transaktionsdetails" FontSize="24" FontWeight="Bold" Foreground="#2C3E50" Margin="0,0,0,8"/>

                    <!-- E-Mail mit Kopier-Button -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <TextBlock Text="{Binding CustomerEmail}" FontSize="16" Foreground="#6C757D" VerticalAlignment="Center"/>
                        <Button Style="{StaticResource CopyButtonStyle}" Command="{Binding CopyEmailCommand}" ToolTip="E-Mail kopieren"/>
                    </StackPanel>

                    <!-- Quick Info Row -->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="💰" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding Amount}" FontWeight="SemiBold" FontSize="16" Margin="0,0,20,0"/>

                        <TextBlock Text="📅" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="{Binding TransactionDate}" FontSize="16"/>
                    </StackPanel>
                </StackPanel>

                <!-- Status Badge -->
                <Border Grid.Column="1" VerticalAlignment="Top">
                    <Border.Style>
                        <Style TargetType="Border" BasedOn="{StaticResource StatusBadgeStyle}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Comparison.Status}" Value="Match">
                                    <Setter Property="Background" Value="#D4EDDA"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Comparison.Status}" Value="OnlyStripe">
                                    <Setter Property="Background" Value="#FFF3CD"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Comparison.Status}" Value="OnlyChargecloud">
                                    <Setter Property="Background" Value="#FFF3CD"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Comparison.Status}" Value="AmountMismatch">
                                    <Setter Property="Background" Value="#F8D7DA"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <TextBlock Text="{Binding Status}" FontWeight="SemiBold" FontSize="14">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Comparison.Status}" Value="Match">
                                        <Setter Property="Foreground" Value="#155724"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Comparison.Status}" Value="OnlyStripe">
                                        <Setter Property="Foreground" Value="#856404"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Comparison.Status}" Value="OnlyChargecloud">
                                        <Setter Property="Foreground" Value="#856404"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding Comparison.Status}" Value="AmountMismatch">
                                        <Setter Property="Foreground" Value="#721C24"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- Stripe Section -->
                <StackPanel Grid.Column="0">
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                <TextBlock Text="💳" FontSize="20" Margin="0,0,8,0"/>
                                <TextBlock Text="Stripe Transaktion" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                                <Border Background="#2196F3" CornerRadius="4" Padding="6,2" Margin="12,0,0,0">
                                    <TextBlock Text="STRIPE" Foreground="White" FontWeight="Bold" FontSize="10"/>
                                </Border>
                            </StackPanel>

                            <!-- Stripe verfügbar -->
                            <StackPanel>
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasStripeTransaction}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding HasStripeTransaction}" Value="False">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>

                                <!-- Stripe ID -->
                                <Grid Style="{StaticResource InfoItemStyle}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Stripe ID" Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Text="{Binding StripeId}" Style="{StaticResource ValueStyle}" FontFamily="Consolas"/>
                                    </StackPanel>
                                    <Button Grid.Column="1" Style="{StaticResource CopyButtonStyle}" Command="{Binding CopyStripeIdCommand}"/>
                                </Grid>

                                <!-- Betrag -->
                                <Grid Style="{StaticResource InfoItemStyle}">
                                    <StackPanel>
                                        <TextBlock Text="Betrag" Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Text="{Binding StripeAmount}" Style="{StaticResource ValueStyle}" FontWeight="SemiBold" FontSize="16"/>
                                    </StackPanel>
                                </Grid>

                                <!-- Status & Datum -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Status" Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Text="{Binding StripeStatus}" Style="{StaticResource ValueStyle}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="Erstellt" Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Text="{Binding StripeDate}" Style="{StaticResource ValueStyle}"/>
                                    </StackPanel>
                                </Grid>

                                <!-- Beschreibung -->
                                <Grid Style="{StaticResource InfoItemStyle}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Beschreibung" Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Text="{Binding StripeDescription}" Style="{StaticResource ValueStyle}"/>
                                    </StackPanel>
                                    <Button Grid.Column="1" Style="{StaticResource CopyButtonStyle}" Command="{Binding CopyStripeDescriptionCommand}"/>
                                </Grid>

                                <!-- Finanzdetails -->
                                <Border Background="#F8F9FA" CornerRadius="6" Padding="12" Margin="0,8,0,0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Gebühr:" Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding StripeFee}" Style="{StaticResource ValueStyle}" Margin="0"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Nettobetrag:" Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding StripeNetAmount}" Style="{StaticResource ValueStyle}" Margin="0" FontWeight="SemiBold"/>

                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Rückerstattet:" Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding StripeRefunded}" Style="{StaticResource ValueStyle}" Margin="0"/>
                                    </Grid>
                                </Border>
                            </StackPanel>

                            <!-- Stripe nicht verfügbar -->
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,40">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasStripeTransaction}" Value="False">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding HasStripeTransaction}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <TextBlock Text="🚫" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,12"/>
                                <TextBlock Text="Keine Stripe-Transaktion" FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Center" Foreground="#6C757D"/>
                                <TextBlock Text="Diese Transaktion existiert nur in Chargecloud" FontSize="12" HorizontalAlignment="Center" Foreground="#ADB5BD" Margin="0,4,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Chargecloud Section -->
                <StackPanel Grid.Column="2">
                    <Border Style="{StaticResource CardStyle}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                <TextBlock Text="⚡" FontSize="20" Margin="0,0,8,0"/>
                                <TextBlock Text="Chargecloud Transaktion" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                                <Border Background="#FF9800" CornerRadius="4" Padding="6,2" Margin="12,0,0,0">
                                    <TextBlock Text="CHARGECLOUD" Foreground="White" FontWeight="Bold" FontSize="10"/>
                                </Border>
                            </StackPanel>

                            <!-- Chargecloud verfügbar -->
                            <StackPanel>
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasChargecloudTransaction}" Value="True">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding HasChargecloudTransaction}" Value="False">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>

                                <!-- Rechnungsnummer -->
                                <Grid Style="{StaticResource InfoItemStyle}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Rechnungsnummer" Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Text="{Binding ChargecloudInvoiceNumber}" Style="{StaticResource ValueStyle}" FontFamily="Consolas"/>
                                    </StackPanel>
                                    <Button Grid.Column="1" Style="{StaticResource CopyButtonStyle}" Command="{Binding CopyChargecloudInvoiceCommand}"/>
                                </Grid>

                                <!-- Betrag -->
                                <Grid Style="{StaticResource InfoItemStyle}">
                                    <StackPanel>
                                        <TextBlock Text="Betrag" Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Text="{Binding ChargecloudAmount}" Style="{StaticResource ValueStyle}" FontWeight="SemiBold" FontSize="16"/>
                                    </StackPanel>
                                </Grid>

                                <!-- Status & Datum -->
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Status" Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Text="{Binding ChargecloudStatus}" Style="{StaticResource ValueStyle}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="Belegdatum" Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Text="{Binding ChargecloudDate}" Style="{StaticResource ValueStyle}"/>
                                    </StackPanel>
                                </Grid>

                                <!-- Vertrag -->
                                <Grid Style="{StaticResource InfoItemStyle}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="Vertrag" Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Text="{Binding ChargecloudContract}" Style="{StaticResource ValueStyle}"/>
                                    </StackPanel>
                                    <Button Grid.Column="1" Style="{StaticResource CopyButtonStyle}" Command="{Binding CopyChargecloudContractCommand}"/>
                                </Grid>

                                <!-- Finanzdetails - KORRIGIERT -->
                                <Border Background="#F8F9FA" CornerRadius="6" Padding="12" Margin="0,8,0,0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Bruttobetrag:" Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding ChargecloudInvoiceAmountGross}" Style="{StaticResource ValueStyle}" Margin="0"/>

                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Bezahlt:" Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ChargecloudAmountPaid}" Style="{StaticResource ValueStyle}" Margin="0" FontWeight="SemiBold"/>

                                        <!-- KORRIGIERT: "Betrag" zu "Offener Betrag" geändert -->
                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Offener Betrag:" Style="{StaticResource LabelStyle}"/>
                                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding ChargecloudOpenAmount}" Style="{StaticResource ValueStyle}" Margin="0"/>
                                    </Grid>
                                </Border>
                            </StackPanel>

                            <!-- Chargecloud nicht verfügbar -->
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,40">
                                <StackPanel.Style>
                                    <Style TargetType="StackPanel">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding HasChargecloudTransaction}" Value="False">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding HasChargecloudTransaction}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </StackPanel.Style>
                                <TextBlock Text="🚫" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,12"/>
                                <TextBlock Text="Keine Chargecloud-Transaktion" FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Center" Foreground="#6C757D"/>
                                <TextBlock Text="Diese Transaktion existiert nur in Stripe" FontSize="12" HorizontalAlignment="Center" Foreground="#ADB5BD" Margin="0,4,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Vergleichsanalyse Card (nur wenn beide vorhanden) -->
                    <Border>
                        <Border.Style>
                            <Style TargetType="Border" BasedOn="{StaticResource CardStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding HasDiscrepancy}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding HasDiscrepancy}" Value="False">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>

                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                <TextBlock Text="🔍" FontSize="20" Margin="0,0,8,0"/>
                                <TextBlock Text="Vergleichsanalyse" Style="{StaticResource SectionHeaderStyle}" Margin="0"/>
                            </StackPanel>

                            <TextBlock Text="{Binding DiscrepancyDescription}" Style="{StaticResource ValueStyle}" TextWrapping="Wrap"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Betragsunterschied" Style="{StaticResource LabelStyle}"/>
                                    <TextBlock Text="{Binding AmountDifference}" Style="{StaticResource ValueStyle}" FontWeight="Bold"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="Timeline-Analyse" Style="{StaticResource LabelStyle}"/>
                                    <TextBlock Text="{Binding TimelineAnalysis}" Style="{StaticResource ValueStyle}"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- Footer -->
        <Border Grid.Row="2" Background="White" BorderBrush="#E1E5E9" BorderThickness="0,1,0,0" Padding="24,16" Margin="-24,16,-24,-24">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="📋 Alle Daten kopieren" 
                        Width="140" 
                        Style="{StaticResource FooterButtonStyle}"
                        Background="#6C757D" 
                        Foreground="White" 
                        Margin="0,0,12,0"
                        Command="{Binding CopyAllDataCommand}"/>

                <Button Content="✉️ E-Mail erstellen" 
                        Width="120" 
                        Style="{StaticResource FooterButtonStyle}"
                        Background="#007BFF" 
                        Foreground="White" 
                        Margin="0,0,12,0"
                        Command="{Binding CreateEmailCommand}"/>

                <Button Content="❌ Schließen" 
                        Width="100" 
                        Style="{StaticResource FooterButtonStyle}"
                        Background="#DC3545" 
                        Foreground="White" 
                        Click="CloseButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>